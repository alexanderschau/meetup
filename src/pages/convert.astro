---
import Base from "../layouts/Base.astro";
import Convert from "../components/Convert.svelte";

const url = Astro.canonicalURL.toString();
---

<Base
  seo={{
    title: `Convert timezone | Meetup.day`,
    description: "Plan your next meeting.",
    imgUrl: "/assets/default.jpg",
    url: url,
  }}
>
  <div class="mx-auto my-12 max-w-5xl px-2">
    <div class="mb-2 font-PlayfairDisplay text-3xl">
      Convert between timezones
    </div>

    <Convert client:load />
  </div>
</Base>
